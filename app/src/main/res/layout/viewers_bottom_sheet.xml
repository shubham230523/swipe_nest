<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/bottomSheet"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    android:padding="10dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

<!--    <ImageView-->
<!--        android:layout_width=""-->
<!--        android:layout_height=""-->
    <!-- Viewers icon -->
    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_view"
        android:id="@+id/ivViewersEye"/>

    <!-- viewers count -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="69"
        android:textColor="@color/black"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@id/ivViewersEye"
        app:layout_constraintTop_toTopOf="@id/ivViewersEye"
        app:layout_constraintBottom_toBottomOf="@id/ivViewersEye"
        android:layout_marginStart="10dp" />

    <!-- Delete icon -->
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_delete"
        android:id="@+id/btnDelete"/>

    <!-- text viewers -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Viewers"
        android:id="@+id/tvViewers"
        android:textColor="@color/black"
        android:maxLines="1"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivViewersEye"
        android:layout_marginTop="20dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvViewers"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/rvStoryViewers"/>

</androidx.constraintlayout.widget.ConstraintLayout>