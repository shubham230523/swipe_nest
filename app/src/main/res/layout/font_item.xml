<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="#90000000"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/typography_bg"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aa"
        android:id="@+id/typography_text"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/typography_bg"
        app:layout_constraintBottom_toBottomOf="@id/typography_bg"
        app:layout_constraintStart_toStartOf="@id/typography_bg"
        app:layout_constraintEnd_toEndOf="@id/typography_bg"
        android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>