<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#70000000"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btnDeselect"
        app:layout_constraintBottom_toTopOf="@id/btnAddToStory"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/ivImgPreview"/>

    <VideoView
        android:id="@+id/VideoPreview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/btnDeselect"
        app:layout_constraintBottom_toTopOf="@id/btnAddToStory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="1dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:focusable="true"
        android:focusedByDefault="true"
        android:layout_marginStart="15dp"
        android:id="@+id/btnDeselect"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvAddToStory"
        android:text="Add to story"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/btnAddToStory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/add_to_story_drawable"
        android:padding="15dp"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_marginEnd="15dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_add_to_story"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/btnAddToStory"/>

</androidx.constraintlayout.widget.ConstraintLayout>