<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:id="@+id/parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- cancel icon -->
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:focusable="true"
        android:focusedByDefault="true"
        android:layout_marginStart="15dp"
        android:id="@+id/btnDeselect"/>

    <!-- add text option -->
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/btnAddText"
        android:visibility="invisible"
        android:src="@drawable/ic_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvDoneTypingText"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"/>

    <!-- done button -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:textStyle="bold"
        android:visibility="gone"
        android:id="@+id/tvDoneTypingText"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"/>

    <!-- image view and video view -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/btnDeselect"
        app:layout_constraintBottom_toTopOf="@id/btnAddToStory"
        android:id="@+id/rl_preview_img">

        <com.github.chrisbanes.photoview.PhotoView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/ivImgPreview"/>

        <VideoView
            android:id="@+id/VideoPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:visibility="visible" />

    </RelativeLayout>

    <!-- text size seekbar guideline -->
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekbar_right_guideline"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6"/>

    <!-- text size seekbar -->
    <SeekBar
        android:layout_width="250dp"
        android:layout_height="15dp"
        android:orientation="horizontal"
        android:id="@+id/fontSeekbar"
        android:focusable="true"
        android:max="100"
        android:rotation="270"
        android:elevation="20dp"
        android:translationZ="20dp"
        android:layout_marginTop="250dp"
        android:layout_marginStart="-150dp"
        android:focusedByDefault="true"
        android:visibility="gone"
        android:theme="@style/MySeekBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/seekbar_right_guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- delete icon -->
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btnDeleteText"
        android:visibility="gone"
        android:layout_marginBottom="10dp"
        android:focusable="true"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/llColorSeekbar"
        android:src="@drawable/ic_delete"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/llColorSeekbar"
        app:layout_constraintBottom_toTopOf="@id/btnAddToStory"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- typography recyclerview -->
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rvTypography"
            android:elevation="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:visibility="invisible"
            android:translationZ="40dp" />

        <com.rtugeek.android.colorseekbar.ColorSeekBar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="gone"
            android:elevation="40dp"
            app:colorSeekBarProgress="900"
            android:translationZ="40dp"
            app:colorSeekBarMaxProgress="1000"
            android:id="@+id/color_seekbar" />
    </LinearLayout>


    <!-- text add to story -->
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvAddToStory"
        android:text="Add to story"
        android:textSize="14sp"
        android:elevation="2dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toStartOf="@id/btnAddToStory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/add_to_story_drawable"
        android:padding="15dp"/>

    <!-- button add to story -->
    <ImageView
        android:layout_width="50dp"
        android:layout_marginEnd="15dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_add_to_story"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/btnAddToStory"/>

</androidx.constraintlayout.widget.ConstraintLayout>