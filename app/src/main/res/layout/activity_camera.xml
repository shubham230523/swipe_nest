<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".story.CameraActivity">

    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/btnRotateCamera"
        android:src="@drawable/ic_switch_camera"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:id="@+id/captureMedia"
        android:visibility="visible"
        android:src="@drawable/ic_default_camera_capture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        android:focusable="true" />

    <!-- video recording progress -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:layout_width="80dp"
        app:trackThickness="10dp"
        android:visibility="visible"
        app:indicatorDirectionCircular="clockwise"
        app:indicatorSize="80dp"
        android:max="100"
        app:trackCornerRadius="10dp"
        android:progress="0"
        android:indeterminate="false"
        android:id="@+id/videoProgress"
        app:indicatorColor="@color/yellow"
        app:layout_constraintStart_toStartOf="@id/captureMedia"
        app:layout_constraintEnd_toEndOf="@id/captureMedia"
        app:layout_constraintTop_toTopOf="@id/captureMedia"
        app:layout_constraintBottom_toBottomOf="@id/captureMedia"
        android:layout_height="80dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>